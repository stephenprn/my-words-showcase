---
import '../global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="shortcut icon" href="assets/favicon.ico" />
  </head>

  <body>
    <div class="body-inner">
      <header class="header">
        <a class="header-logo" href="/">
          <img src="assets/header-logo.png" class="header-logo-img" />
        </a>
      </header>
  
      <main class="main">
      <slot />
    </main>
  
      <footer>
        <a href="/privacy-policy">Privacy policy</a>
        <a href="/terms-conditions">Terms & conditions</a>
      </footer>
    </div>
  </body>
</html>

<style>
  .header {
    height: 60px;
    padding: 8px 0;
  }

  .header-logo {
    height: 100%;

    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: start;
  }

  .header-logo-img {
    height: 100%;
  }

  .main {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;

    gap: 32px;
  }

  footer {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 32px;

    padding: 32px 0;
  }

  @media screen and (max-width: 900px) {
    .header {
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .main {
      flex-direction: column;
    }
	
    footer {
      flex-direction: column;
    }
  }
</style>
